<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    
    <servlet>
        <servlet-name>Slogin</servlet-name>
        <servlet-class>com.br.cargafacil.servlet.Slogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SUsuario</servlet-name>
        <servlet-class>com.br.cargafacil.servlet.SUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>com.br.cargafacil.controller.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Slogin</servlet-name>
        <url-pattern>/Slogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SUsuario</servlet-name>
        <url-pattern>/SUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/Controller</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>10</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/errospage/erro.jsp</location>
    </error-page>
</web-app>
